<h1><strong>Editing Book</strong></h1>

<%= form_with model: @book do |f| %>
      <div>
        <%= f.label :Title %><br>
        <%= f.text_field :title, autofocus: true, placeholder: "Title" %>
      </div>
      <div>
        <%= f.label :Opnion%><br>
        <%= f.text_area :opnion, autofocus: true, placeholder: "Opnion" %>
      </div>
      <div>
        <%= f.submit "Update book" %>
      </div>
      
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
      <% end %>

  <% end %>
