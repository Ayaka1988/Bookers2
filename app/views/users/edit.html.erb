 <h2>User info</h2>
 
  <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this book from being saved:
    <ul>
      <%= @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <%end %>
    </ul>
  <% end %>
    
    
    <!-- form_with部分-->
    <%= form_with model: @user do |f| %>
      <div>
        <%= f.label :Name %><br>
        <%= f.text_field :name, autofocus: true, placeholder: "Name" %>
      </div>
      <div>
        <%= f.label :Image %><br>
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
      </div>
      <div>
        <%= f.label :Introdaction %><br>
        <%= f.text_area :introduction, autofocus: true, placeholder: "Introduction" %>
      </div>
      <div>
        <%= f.submit "Update User" %>
      </div>

    <% end %>

